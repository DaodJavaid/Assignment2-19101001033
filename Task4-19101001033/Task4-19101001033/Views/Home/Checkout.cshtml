<!-- Banner Start -->

    <div class="container-fluid" id="about">
        <div class="row">
            <div class="col-3 offset-md-1" id="about_text">
                <h1 class="about_texting">CheckOut</h1>
                <p><a href="Home.html" class="about_texting_phara"> Home </a>/ CheckOut</p>
            </div>
        </div>
    </div>
<!-- Banner End -->

<div class="container">
    <div class="row" id="second_section" >
        <div class="col-md-8" id="left_section" >
            <h4>BILLING DETAILS</h4>

            <form method="post" action="#">

                <div class="container">

                    <div class="row"> 
                
                        <div class="col-md-6"> 
                <label id="Checkout_input_billing_head">First name </label>
                <br />
                <br />
                <input type="text"/ id="Checkout_input_billing_field" placeholder="Enter First Name">
                
                </div>
                        <div class="col-md-6"> 
                <label id="Checkout_input_billing_head">Last name </label>
                <br />
                <br />
                <input type="text"/ id="Checkout_input_billing_field" placeholder="Enter Last Name">
                
                </div>

                </div> 
                
                
                <div class="row" style="margin-top: 1rem;"> 
                
                        <div class="col-md-6"> 
                <label id="Checkout_input_billing_head">Email address</label>
                <br />
                <br />
                <input type="email"/ id="Checkout_input_billing_field" placeholder="Enter First Name">
                
                </div>
                        <div class="col-md-6"> 
                <label id="Checkout_input_billing_head">Phone </label>
                <br />
                <br />
                <input type="number"/ id="Checkout_input_billing_field" placeholder="Enter Last Name">
                </div>

                </div> 
                
                
                <div class="row" style="margin-top: 1.5rem; float: left; margin-left: -100px"> 
                
                <h5>ADDITIONAL INFORMATION</h5>
                <br />
                <h6 style="color: black;">Comment's (Optional) </h6>
                </div>

                <br />
                <div class="row" style="margin-top: 4.5rem; "> 
                
                <br />
                <br />
                    <textarea style="height: 2rem; height: 12rem; padding-top: 1.2rem; width: 90%;" 
                              placeholder="Notes about your order, e.g. special notes for delivery." ></textarea>
                </div>




                </div>
            </form>
            

        </div>



        @*//////*@
        <div class="col-md-4" id="right_section" >


            <h4>Your Order</h4>
            <h6 style="color: black; float: left;">PRODUCT</h6>
            <h6 style="color: black; float: right;">SUBTOTAL</h6>
           
            <hr id="horizantol_line" >
            
            <h6 style="color: black; float: left;">
                @ViewBag.Product_name
            </h6>
            <h6 style="color: black; float: right;">
                @ViewBag.Product_price
            </h6>
           
            <br />
            <br />
             <hr id="horizantol_line" >
             

            <h6 style="color: black; float: left;">Subtotal</h6>
            <h6 style="color: black; float: right;">
                @ViewBag.Product_price 
            </h6>
           
             <hr id="horizantol_line" >
           
             <h6 style="color: black; float: left;">Total</h6>
            <h6 style="color: black; float: right;">
                @ViewBag.Product_price 
            </h6>
           
            <hr id="horizantol_line" >
         
            <h6 style="color: black; float: left;">Credit card / debit card</h6>

            <form method="post" action="#">
                <br />
                <br />
                <label id="Checkout_input_head">Card number</label>
                <br />
                <input type="number"/ id="Checkout_input_field" placeholder="1234 1234 1234 1234">
                
                <br />
                <br />
                
                <label id="Checkout_input_head">Expiration</label>
                <br />
                <input type="number"/ id="Checkout_input_field" placeholder="MM/YY">
                
                <br />
                <br />
                
                <label id="Checkout_input_head">CVC</label>
                <br />
                <input type="number"/ id="Checkout_input_field" placeholder="CVC">

                <input type="submit" value="Place Order" id="place_order_button" class="btn btn-danger"/>
                <p>Your personal data will be used to process your order, support your experience throughout this website, and for other purposes described in our privacy policy.</p>
            </form>
           

        </div>
        
    </div>
</div>
